{
  "name": "airweave-mcp-search",
  "version": "0.5.7",
  "mcpName": "io.github.airweave-ai/search",
  "description": "MCP server for searching Airweave collections",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "airweave-mcp-search": "./build/index.js"
  },
  "scripts": {
    "build": "tsc && chmod 755 build/index.js",
    "start": "node build/index.js",
    "start:http": "node build/index-http.js",
    "dev": "npm run build && npm run start",
    "dev:http": "npm run build && npm run start:http",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:mcp": "vitest run tests/mcp-server.test.ts",
    "test:http": "vitest run tests/http-transport.test.ts",
    "test:all": "npm run test:mcp && npm run test:http",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "airweave",
    "search",
    "model-context-protocol",
    "ai",
    "vector-search",
    "claude",
    "cursor"
  ],
  "author": "Airweave",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/airweave-ai/airweave.git",
    "directory": "mcp"
  },
  "homepage": "https://airweave.ai",
  "bugs": {
    "url": "https://github.com/airweave-ai/airweave/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@airweave/sdk": "^0.6.0",
    "@modelcontextprotocol/sdk": "^1.12.0",
    "express": "^4.18.2",
    "posthog-node": "^5.24.11",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^2.0.0",
    "supertest": "^7.0.0",
    "typescript": "^5.7.3",
    "vitest": "^2.0.0"
  },
  "files": [
    "build",
    "README.md"
  ]
}
